<div class="w-full max-w-xl mx-auto">
  <ul class="steps steps-horizontal w-full mb-12">
    <% wizard_steps.each do |wizard_step| %>
      <% step_class = "step" %>
      <% step_class << " step-primary" if past_step?(wizard_step) || wizard_step == step %>
      <li class="<%= step_class %>">
        <%= wizard_step.to_s.titleize %>
      </li>
    <% end %>
  </ul>

  <h1 class="text-3xl font-bold mb-6 text-center">Describe Your Target Audience</h1>
  <%= form_with(model: @website_request, url: wizard_path, method: :put, class: "space-y-4") do |form| %>
    <div class="form-control">
      <%= form.label :target_audience, "Who are you trying to reach?", class: "label" do %>
        <span class="label-text">e.g., Young professionals, families, etc.</span>
      <% end %>
      <%= form.text_area :target_audience, rows: 4, class: "textarea textarea-bordered w-full", placeholder: "Our customers are typically young adults aged 25-40 who value quality and sustainability.", required: true %>
    </div>
    
    <div class="form-control">
      <%= form.label :email, "Your Email Address", class: "label" do %>
        <span class="label-text">We'll send the preview link here</span>
      <% end %>
      <%= form.email_field :email, class: "input input-bordered w-full", placeholder: "you@example.com", required: true %>
    </div>
    <div class="flex justify-between pt-4">
      <%= link_to "Back", previous_wizard_path, class: "btn btn-ghost" %>
      <%= form.submit "Generate Website", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>